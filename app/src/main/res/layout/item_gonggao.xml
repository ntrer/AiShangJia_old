<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gonggao_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="刘总"
            />

        <TextView
            android:id="@+id/gonggao_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:maxEms="12"
            android:layout_below="@id/gonggao_title"
            android:layout_alignParentLeft="true"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="安阳数尚啊飒飒是法师撒啊沙发沙发沙发沙发沙发沙发是阿瑟东v法撒旦发撒三十v阿三v啊飒飒是否阿萨市场啊算法生成"
            />


        <TextView
            android:id="@+id/gonggao_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_black_1000"
            android:text="2018 12-12 11:23:34"
            />

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line"
        />
</LinearLayout>